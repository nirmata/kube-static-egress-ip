set -e

GIT_COMMIT=$(git describe --tags --dirty --always)
BUILD_FLAGS=(-ldflags="-w -X github.com/nirmata/kube-static-egress-ip/pkg/version.Version=${GIT_COMMIT}")

# Get rid of existing binary
echo "Removing Old egressip-controller binaries"
rm -f ./egressip-controller

echo "Building Nirmata static egress IP binaries"
# Build binary
CGO_ENABLED=0 go build -o egressip-controller \
    "${BUILD_FLAGS[@]}" \
    github.com/nirmata/kube-static-egress-ip/cmd/...

if [ $? -eq 0 ]; then
  echo "Building Nirmata static egress IP binaries successful."
else
  echo "Building Nirmata static egress IP binaries failed."
fi
